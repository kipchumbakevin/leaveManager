<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".auth.RegisterActivity">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/login_pages">

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:gravity="center"
                    android:text="Login"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                android:id="@+id/putDomain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_design"
                android:drawableStart="@drawable/ic_business_center"
                android:drawableTint="@color/colorGray"
                android:hint="Domain"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:elevation="10dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/putUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_design"
                android:drawableStart="@drawable/ic_person"
                android:drawableTint="@color/colorGray"
                android:hint="Username"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:elevation="10dp"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/putPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_design"
                android:drawableStart="@drawable/ic_lock"
                android:drawableTint="@color/colorGray"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:elevation="10dp"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Login"
                android:background="@drawable/button_shape"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/noAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="10dp"
                android:text="No account yet?Register."/>
            </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    <include layout="@layout/content_progress_bar"/>


</RelativeLayout>